pipeline {
    agent any

    tools {
        nodejs 'nodejs-setup' // Use the Node.js setup you configured in Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/username/repo-name.git' // Replace with your repository URL
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install' // Installs dependencies
            }
        }

        stage('Build Application') {
            steps {
                sh 'npm run build' // Builds the React app
            }
        }

        stage('Archive Build') {
            steps {
                archiveArtifacts artifacts: 'build/**', allowEmptyArchive: true
            }
        }
    }

    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
